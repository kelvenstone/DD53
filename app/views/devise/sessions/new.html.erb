<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                     <h3 class="panel-title">要吃飯就要先登入</h3>
                 </div>
                <div class="panel-body">
                 <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.input :email, :label => "電子郵件", required: false, autofocus: true, input_html: { class: 'form-control' } %>
                      <%= f.input :password, :label => "密碼", required: false, input_html: { class: 'form-control' } %>
                    </div>
                <div class="checkbox">
                  <label>
                   <%= f.input :remember_me,:label => "記住我", as: :boolean, input_html: { class: '' } if devise_mapping.rememberable? %>
                  </label>
                </div>
                    <div class="form-actions">
                      <%= f.button :submit, "登入", class: 'btn btn-lg btn-success btn-block' %>
                    </div>
                <% end %>
              <%= render "devise/shared/links" %>
                 </div>
            </div>
        </div>
     </div>
 </div>
